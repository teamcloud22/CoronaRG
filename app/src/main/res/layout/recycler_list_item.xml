<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:translationY="-15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="249dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="217dp"
            android:orientation="vertical"
            android:padding="23dp">

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/sidoImageId"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/sidoTextViewId"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingLeft="4dp"
                    android:text="city"
                    android:textSize="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="누적확진자"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/defCntTextViewId"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/red"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="신규확진자"
                    android:textSize="13dp" />


                <TextView
                    android:id="@+id/incDecTextViewId"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp" >

                <TextView
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="사망자"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/deathCntTextViewId"
                    android:layout_width="51dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/blue"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="10dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="격리중"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/isolIngCntTextViewId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="해외유입"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/overFlowCntTextViewId"
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="10dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="격리해제"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/isolClearCntTextViewId"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>