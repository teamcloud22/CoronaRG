<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="265dp"
    android:translationY="-15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingLeft="40dp">

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/orgnameTextViewId"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/hs"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:text="기관이름"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:layout_width="280dp"
                    android:layout_height="2dp"
                    android:background="@color/orange2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:padding="8dp"
                android:translationY="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="주소"
                    android:textSize="14dp"
                    android:translationX="-5dp" />

                <TextView
                    android:id="@+id/addressTextViewId"
                    android:layout_width="199dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/hs"
                    android:paddingStart="10dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:singleLine="false"
                    android:text="서울특별"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="진료"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/sttTextViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="10dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="09:00~16:00"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="점심"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/lunchTextViewId"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="10dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="12:00~13:00"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:translationY="-1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="5dp"
                    android:paddingLeft="24dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="전화번호"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/telTextViewId"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hs"
                    android:paddingStart="24dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>